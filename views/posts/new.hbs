<div class="center_div py-2">
    <div class="post-container bg-light">
        <h3>New Post</h3>
        <div class="row">
            <form action="/posts" method="POST" class="col s12">
                <div class="row">
                    <div class="input-field post-title py-1">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title">
                    </div>
                </div>
                <div class="row">
                    <div class="input-field text-area py-1">
                        <textarea id="body" name="body"></textarea>
                    </div>
                </div>

                <div class="row">
                    <input type="submit" value="Save" class="btn btn-primary m-1">
                    <a href="/myposts" class="btn btn-danger m-1">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>